{% extends 'base.html.twig' %}

{% block title %}View Question{% endblock %}

{% block body %}
    <h3 class="text-center"> {{ question.question }}</h3>

    {% if question.body %}
        <div class="row">
            <div class="col-8 offset-2">
                <div class="card">
                    <div class="card-body">
                        <p class="card-text">{{ question.body }}</p>
                    </div>
                    <div class="card-footer text-muted small">
                        {{ question.created|date("m/d/Y h:i a") }}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    {% if question.answers %}
        <hr>
        <h4 class="text-center">Answers</h4>
        <div class="row">
            <div class="col-8 offset-2">
                {% for answer in question.answers %}
                    <div class="card">
                        <div class="card-body">
                            <p class="card-text">{{ answer.body }}</p>
                        </div>
                        <div class="card-footer text-muted small">
                            {{ answer.user.email }} - {{ answer.created|date("m/d/Y h:i a") }}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}

    {% if answerForm %}
        <hr>
        <div class="row">
            <div class="col-8 offset-2">
                {{ form(answerForm) }}
            </div>
        </div>
    {% endif %}

{% endblock %}
